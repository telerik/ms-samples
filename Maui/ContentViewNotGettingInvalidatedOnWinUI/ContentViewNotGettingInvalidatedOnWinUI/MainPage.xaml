<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ContentViewNotGettingInvalidatedOnWinUI"
             x:Class="ContentViewNotGettingInvalidatedOnWinUI.MainPage">
    
    <VisualElement.Resources>
        <ControlTemplate x:Key="CT1">
            <local:MyGrid>
                <Label Text="text here" Grid.Row="1" />
            </local:MyGrid>
        </ControlTemplate>
    </VisualElement.Resources>
    
    <Grid RowDefinitions="*, *">
        <Grid>
            <local:CustomView x:Name="customView1" ControlTemplate="{StaticResource CT1}" />
        </Grid>
        <ScrollView Grid.Row="1">
            <VerticalStackLayout>
                <Button Text="clck" Clicked="Button_Clicked" Grid.Row="2" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
    
</ContentPage>
